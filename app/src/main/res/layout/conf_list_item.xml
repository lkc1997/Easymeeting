<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <com.lkc97.easymeeting.ui.adapter.FontTextView
        android:id="@+id/conf_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="会议名称"
        android:textSize="30sp"
        android:textColor="@color/material_blue_700"
        app:font_path="font.ttf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conf_list_statetxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="状态："
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/conf_list_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1天后"
            android:textSize="20sp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <info.hoang8f.widget.FButton
                android:id="@+id/conf_list_quit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:minHeight="@dimen/demo_button_min_height"
                android:minWidth="@dimen/demo_button_min_width"
                android:text="取消参加"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:fButtonColor="@color/material_blue_300"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="2dp"
                fbutton:cornerRadius="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
